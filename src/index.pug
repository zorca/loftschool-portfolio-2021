include ./mixins.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .main-content
        section.section-welcome.fullscreen-section
          .container.container--welcome
            header.header
              .header__left
                .span.logo-text ВШ
              .header__center
                .header__menu
                  nav.menu
                    ul.menu__list
                      - var menuLinks = ['Обо мне', 'Навыки', 'Работы', 'Отзывы'];
                      each item in menuLinks
                        li.menu__item
                          a(href="#").menu__link #{item}
              .header__right
                ul.social-icons
                  - var socials = [{icon: 'insta', link: 'https://www.instagram.com/wpseed/'}, {icon: 'github', link: 'https://github.com/zorca'}, {icon: 'vk', link: 'https://vk.com/steelcat'}, {icon: 'envelope', link: 'mailto:vs@zorca.org'}];
                  each item in socials
                    li.social-icons__item
                      a(href=`${item.link}`).social-icons__link
                        +icon(item.icon, 'social-icons__icon')
            .hero
              .hero__subtitle Личный сайт веб-разработчика
              .hero_title Виталий Шутов
            .welcome__down
              a(href="").btn-scroll-down Скролл
               +icon('scroll-alt', 'btn-scroll-down__icon')
        section.section-about
          .container.container--about
            .about
              .about__left
                .user
                  .user__avatar
                    .user__avatar-wrapper
                      +image('content/avatar.jpg', 'user__avatar-img u-rounded-full')
                  .user__about
                    -
                      var userinfo = [
                        ['Проживаю:', 'Санкт-Петербург'],
                        ['Возраст:', '47 лет'],
                        ['Родился:', '9 июня 1973 года'],
                      ];
                    table.user__table
                      each item in userinfo
                        tr.user__table-item
                          td.user__table-item-title #{item[0]}
                          td.user__table-item-content #{item[1]}
              .about__right
                .about__main-text-content
                  .about__desc Привет, меня зовут
                  .about__title Виталий Шутов
                  .about__text-info.u-font-semibold
                    p
                      | Я занимаюсь разработкой современных сайтов и приложений.<br>
                      | Мне нравится делать интересные и современные проекты.
                .about__ps
                  .about__ps-icon
                  .about__ps-text
                    | Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
                    | Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
        .triangles.triangles--top
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--left
            polygon(points="0,0 0,100 1000,100")
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--right
            polygon(points="0,100 1000,100 1000,0")
        section.section-my-services
          .container
            .my-services
              .my-services__right
                .wrapper-my-services
                  .title.title--my-services Чем я могу быть полезен Вам
                  p.my-services__text.u-font-semibold.u-color-dark-80 Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
                  .values
                    -
                      var skillsCategories = [
                        ["Front-end", [{type: "HTML5", value: 64}, {type: "CSS3", value: 32}, {type: "Javascript", value: 192}, {type: "Jquery & Vue.js", value: 32}]],
                        ["Workflow", [{type: "GIT", value: 32}, {type: "Terminal", value: 64}, {type: "Gulp", value: 128}, {type: "Webpack", value: 96}]]
                      ];

                    ul.skills
                      each category in skillsCategories
                        li.skills__item(v-for="category in categories")
                          .skills-row
                            .skills-row__title #{category[0]}
                            ul.skills-row__list
                              each skill in category[1]
                                li.skills-row__item
                                  .skill
                                    svg(viewBox="0 0 100 100").skill__circle-shape
                                      circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
                                      circle(style=`stroke-dashoffset: ${256 - skill.value}` cx="50" cy="50" r="40" stroke="url(#gradient)" transform='rotate(180 50 50)').skill__circle.skill__circle_above
                                      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
                                        stop(offset="0%" stop-color="#5500f2")
                                        stop(offset="100%" stop-color="#8f00ef")
                                    .skill__circle-text #{skill.type}
